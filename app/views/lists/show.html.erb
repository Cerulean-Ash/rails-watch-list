<div class="banner position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
  <span class="movie-tag"><%= pluralize(@list.movies.size, 'movie') %></span>
</div>


<div class="container show-page-cont">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3>My Lists</h3>
    <%= link_to 'add movie',  new_list_bookmark_path(@list), class: 'btn btn-success'%>
  </div>

  <div class="show-cards">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="show-card-container">
        <div class="card-category show-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= movie.poster_url%>')">
        </div>
        <div class="card-body">
          <div class="card-title-cont">
            <h5 class="show-card-title"><%= movie.title %></h5>
            <p class="show-card-rating"><%= movie.rating %> ‚≠ê </p>
          </div>
          <p class="show-card-text"> <%= movie.overview %></p>
          <div class="show-card-actions">
            <p class='show-card-comment'><%= bookmark.comment %></p>
            <%= link_to '<i class="fas fa-trash"></i>'.html_safe,
              bookmark_path(bookmark), class: "bookmark-delete",
              method: :delete,
              data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
